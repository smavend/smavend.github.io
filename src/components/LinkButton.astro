---
const { href } = Astro.props
---

<a
	href={href}
	role="link"
	class={`
	inline-flex items-center justify-center
	gap-2 px-3 py-2 space-x-2 transition
	text-base dark:text-white text-gray-600
	bg-gray-300/60 border border-gray-800/60
	hover:bg-gray-300/60 hover:border-gray-200
	dark:bg-gray-800 dark:border dark:border-gray-600
	dark:hover:bg-gray-800 dark:hover:border-gray-900
	focus-visible:ring-blue-500/80 text-md
	group max-w-fit rounded-xl dark:hover:text-white
	focus:outline-none focus-visible:outline-none
	focus-visible:ring focus-visible:ring-white
	focus-visible:ring-offset-2 active:bg-black`}>
	<slot />
</a>
